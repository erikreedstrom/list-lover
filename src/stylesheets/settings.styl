// Font stacks
$lato = 'Lato', sans-serif

// Default font settings
$font-stack = $lato
$font-size-base = 17
$font-size = unit($font-size-base, 'px')

$font-color = $gray-darker

// Application defaults
$border-radius = 2px
$border-color = $gray-dark

$container-width = 640px

$field-max-width = 320px
