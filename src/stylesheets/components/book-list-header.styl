@import '../settings'
@import '../mixins/typography'

.BookListHeader {
  height: 40px;
  width: 100%;
  position: fixed;
  top: 0;
  background-color: $white;
  box-shadow: 0 0 5px $gray-darker;
  box-sizing: border-box;
  padding: 0 $unit-small;
}

.BookListHeader-controls {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.BookListHeader-controls span {
  padding-right: $unit-xsmall;

  &:last-of-type {
    padding-right: 0;
  }
}

.BookListHeader-label {
  sub-title()
  font-weight: 600;
  color: $red
  padding-right: $unit-small;
}
