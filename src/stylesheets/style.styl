@import 'settings'
@import 'mixins/typography'

// ------------------------------------------
// Components
// ------------------------------------------

@import 'components/book-entry'
@import 'components/book-list'
@import 'components/book-list-header'
@import 'components/meta'
@import 'components/sk-folding-cube'

// ------------------------------------------
// Application
// ------------------------------------------

html {
  font-size: unit($font-size-base, 'px');
  font-size: 100%;
}

body {
  body()
  margin: 0;
  padding: 0;

  font-family: $font-stack;
  color: $font-color;

  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  font-size-adjust: auto;

  display: flex;
  flex-direction: column;
  height: 100vh;
  max-width 100vw;
  overflow-x: hidden;
}

main {
  z-index: 0;
  position: relative;
}

.u-hidden {
  display: none;
}

// Typography Resets

a {
  color: $blue;
  text-decoration: none;
  font-weight: bold;

  &:hover, &:focus, &:active {
    text-decoration: underline;
  }
}

ul, menu, dir {
  padding: 0;
}

h1,h2,h3,h4,h5,h6 {
  font-size: inherit;
  font-weight: normal;
  margin: 0;
}

sup, sub {
  font-size: 0.3em;
}

sup {
  top: -1.3em;
}

sub {
  bottom: -1.3em;
}

p {
  margin: 0;
}

